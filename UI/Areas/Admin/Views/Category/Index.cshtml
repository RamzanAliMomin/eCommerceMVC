@model IEnumerable<DomainModels.Entities.Category>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<div class="row">
    <div class="col-sm">
        <a href=" @Url.Action("Export")" class="btn btn-primary">
            <i class="fa fa-file-excel"></i> Export
        </a>
    </div>
</div>
<a href="@Url.Action("GetFileFormatForUpload")" class="btn btn-pure btn-dark"><i class="fa fa-download mr-2"></i> File Format</a>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CategoryId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CategoryId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.CategoryId }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.CategoryId }, new { onclick = "return confirm('Are you sure to delete?')" })
            </td>
        </tr>
    }

</table>
